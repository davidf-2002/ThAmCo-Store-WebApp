@model WebApp.Models.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create New Product</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>    
    <div class="form-group">
        <label asp-for="StockLevel" class="control-label"></label>
        <textarea asp-for="StockLevel" class="form-control"></textarea>
        <span asp-validation-for="StockLevel" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <textarea asp-for="CategoryId" class="form-control"></textarea>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
